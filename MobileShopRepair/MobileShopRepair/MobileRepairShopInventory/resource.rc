#include <windows.h>
#include "resource.h"

IDD_DISCOUNT DIALOGEX 0, 0, 200, 100
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Enter Discount"
FONT 9, "Segoe UI"
BEGIN
    LTEXT       "Discount % (10 - 20):", -1, 10, 15, 120, 12
    EDITTEXT    IDC_EDIT_DISCOUNT, 10, 35, 60, 14, ES_NUMBER | WS_BORDER
    DEFPUSHBUTTON "OK", IDOK, 40, 60, 50, 14
    PUSHBUTTON  "Cancel", IDCANCEL, 100, 60, 50, 14
END
 
IDD_HISTORY DIALOGEX 0, 0, 420, 260
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Item History"
FONT 9, "Segoe UI"
BEGIN
    LISTBOX     IDC_HISTORY_LIST, 10, 10, 400, 210, WS_BORDER | WS_VSCROLL | LBS_NOINTEGRALHEIGHT
    DEFPUSHBUTTON "Close", IDOK, 180, 226, 60, 20
END
 
IDD_REPORT DIALOG 0, 0, 420, 220
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Item Report"
FONT 9, "Segoe UI"
BEGIN
    LISTBOX     IDC_REPORT_TEXT, 10, 10, 400, 170, WS_BORDER | WS_VSCROLL
    DEFPUSHBUTTON "Close", IDOK, 180, 186, 60, 20
END
